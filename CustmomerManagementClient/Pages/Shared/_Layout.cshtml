<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Customer Management Client</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @if (ViewContext.ActionDescriptor.DisplayName.Contains("ChrisBurrowsCV"))
    {
        <link rel="stylesheet" href="~/css/cv.css" />
    }
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100%;
        }

        main {
            flex: 1;
        }

        footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <main role="main" class="flex-shrink-0">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="d-flex justify-content-center align-items-center mt-auto">
        <div class="text-center">
            <span class="text-muted">© 2024 Chris Burrows. All rights reserved.</span>
            <br>
            <a href="/ChrisBurrowsCV" class="text-muted">View My CV</a>
        </div>
    </footer>

    <!-- Include htmx JS -->
    <script src="https://unpkg.com/htmx.org@1.8.4"></script>
    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <!-- Include site.js script -->
    <script src="~/js/site.js"></script>
</body>
</html>
