@model CustomerManagementClient.Models.CustomerViewModel

<tr id="customerRow-@Model.Id" class="@(Model.IsAdded ? "table-success" : Model.IsEdited ? "table-warning" : "")">
    <td class="align-middle text-center">@Model.Id</td>
    <td class="align-middle">@Model.FirstName</td>
    <td class="align-middle">@Model.Surname</td>
    <td class="align-middle">@Model.Email</td>
    <td class="align-middle">@Model.PhoneNumber</td>
    <td class="text-center">
        <div class="d-flex flex-wrap gap-2">
            <button class="btn btn-secondary btn-sm"
                    hx-post="@Url.Page("/Index", pageHandler: "EditCustomer", values: new { customerId = Model.Id })"
                    hx-target="#customerRow-@Model.Id"
                    hx-swap="outerHTML"
                    aria-label="Edit Customer">
                <i class="fa fa-edit"></i>
            </button>
            <button class="btn btn-danger btn-sm"
                    hx-post="@Url.Page("/Index", pageHandler: "DeleteCustomer", values: new { customerId = Model.Id })"
                    hx-target="#customerRow-@Model.Id"
                    hx-swap="outerHTML"
                    aria-label="Delete Customer">
                <i class="fa fa-trash"></i>
            </button>
        </div>
    </t>
</tr>
